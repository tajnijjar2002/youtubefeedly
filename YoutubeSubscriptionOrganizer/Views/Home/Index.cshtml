@model IEnumerable<YoutubeSubscriptionOrganizer.Core.Models.ChannelGroup>

<div class="container-fluid" ng-controller="YoutubeController">

    @*<button ng-click="clicked()">Click</button>*@
    <div class="row">
        <div class="col-md-2" style="border: 1px solid red;">
            @foreach (var channelGroup in Model)
            {
                <div class="channelGroupName" ng-click="getVideosForChannelGroup(@channelGroup.Id)">
                    @channelGroup.ChannelGroupName
                </div>
            }
        </div>
        <div class="col-md-10" style="border: 1px solid green;">
            <div class="allVideosContainer">
                <ul>
                    <li ng-repeat="channel in channels">
                        {{channel.Title}}
                        <div class="channelVideosList">
                            <div class="row">
                                <div class="channelVideos">
                                    <div class="col-md-2 singleVideo" ng-repeat="video in channelVideos" ng-show="video.snippet.channelId === channel.ChannelUrl">
                                        <img ng-src="{{video.snippet.thumbnails.default.url}}" alt="{{video.snippet.title}}" />
                                        <a href="#" class="videoTitle"> {{video.snippet.title}}</a>
                                        <a href="#" class="channelTitle">{{video.snippet.channelTitle}}</a>
                                        <span class="datePublished">{{video.snippet.publishedAt|date:'dd MMM yyyy'}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>







@section scripts
{
    <script src="../../Scripts/angular.min.js" type="text/javascript"></script>
    <script src="../../Scripts/app/app.js" type="text/javascript"></script>
    <script src="../../Scripts/app/YoutubeController.js" type="text/javascript"></script>
    <script src="../../Scripts/Services/YoutubeFactory.js" type="text/javascript"></script>
}
